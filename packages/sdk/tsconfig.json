{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/core/*": ["./src/core/*"],
      "@/api/*": ["./src/api/*"],
      "@/http/*": ["./src/http/*"],
      "@/transfer/*": ["./src/transfer/*"],
      "@/security/*": ["./src/security/*"],
      "@/monitoring/*": ["./src/monitoring/*"],
      "@/utils/*": ["./src/utils/*"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "__tests__"]
}
