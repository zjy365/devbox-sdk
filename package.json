{
  "name": "devbox-sdk-monorepo",
  "version": "1.0.0",
  "description": "Enterprise TypeScript SDK for Sealos Devbox management with HTTP API + Bun runtime architecture",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:sdk": "turbo run build --filter=@sealos/devbox-sdk",
    "build:server": "turbo run build --filter=@sealos/devbox-server",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "dev": "turbo run dev --filter=@sealos/devbox-server",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@biomejs/biome": "^1.8.3",
    "turbo": "^2.5.8",
    "tsup": "^8.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.5.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "npm@11.5.1",
  "author": {
    "name": "zjy365",
    "email": "3161362058@qq.com",
    "url": "https://github.com/zjy365"
  },
  "license": "Apache-2.0",
  "keywords": [
    "sealos",
    "devbox",
    "sdk",
    "typescript",
    "cloud-development",
    "container",
    "bun",
    "http-api",
    "monorepo"
  ],
  "homepage": "https://github.com/zjy365/devbox-sdk",
  "bugs": {
    "url": "https://github.com/zjy365/devbox-sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zjy365/devbox-sdk.git"
  }
}